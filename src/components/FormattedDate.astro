---
interface Props {
  start: Date;
  end?: Date;
}

const { start, end } = Astro.props;

function format(date: Date) {
  return date.toLocaleDateString('en-za', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};

